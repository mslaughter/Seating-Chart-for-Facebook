<% provide(:title, @classroom.name) %>
<h1><%= @classroom.name %></h1>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th><%= "" %></th>
			<% for i in (1..@classroom.tables.length) %>
				<th><%= "Table #{i}" %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% puts "results class: #{@classroom.results.class()}" %>
		<% for iteration in @classroom.results.keys() %>
		<tr>
			<td><%= "Session #{iteration}" %></td>
			<% for table in @classroom.results[iteration].keys() %>
				<% nice_names = "" %>
				<% for name in @classroom.results[iteration][table] %>
					<% nice_names += "#{name}, " %>
				<% end %>
				<% nice_names.slice!(-1) %>
				<% nice_names.slice!(-1) %>
				<td><%= nice_names %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>		
</table>