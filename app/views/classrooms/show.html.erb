<% provide(:title, @classroom.name) %>
<h3><%= @classroom.name %></h3>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th><%= "" %></th>
			<% for i in (1..@classroom.tables.length) %>
				<th><%= "Table #{i}" %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% puts "Iteration 1: #{@classroom.rotations.find_by_name(1)}" %>
		<% for rotation in @classroom.rotations %>
		<tr>
			<td><%= "Session #{rotation.name}" %></td>
			<% for table in rotation.tables %>
				<% nice_names = "" %>
				<% for name in table.students.split(" ") %>
					<% nice_names += "#{name}, " %>
				<% end %>
				<% nice_names.slice!(-1) %>
				<% nice_names.slice!(-1) %>
				<td><%= nice_names %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>		
</table>